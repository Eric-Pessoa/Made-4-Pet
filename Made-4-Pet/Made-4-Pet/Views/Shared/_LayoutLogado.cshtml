<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Made4Pet</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/LayoutLogado.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="headerPersonalized navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="d-flex justify-content-between align-items-center col-12">
                <div class="m-0 p-0 col-2">
                    <a class="navbar-brand col-3" asp-controller="Home" asp-action="Index"><img src="~/img/logo.png" width="70" /></a>
                </div>
                <div class="col-6">
                    <form class="w-100 flexCenterRow" asp-action="buscarServicos" asp-controller="estabelecimento">
                        <input placeholder="Pesquise aqui por Serviços ou Estabelecimentos" class="form-control col-10" />
                        <button type="submit" class="btn btnSearch">
                            <span class="material-icons text-white h-50">search</span>
                        </button>
                    </form>
                </div>
                <div class="d-flex flex-row justify-content-center col-2">
                    <a class="btn btnPink" asp-action="Login" asp-controller="home"><img src="~/img/icons/gear.png" id="gear" width="40" /></a>
                    <a class="btn btnPink" asp-action="Login" asp-controller="home"><img src="~/img/icons/cart.png" id="cart" width="40" /></a>
                </div>
                <div class="col-2">
                    <a class="btn btnPinkPill" href="#">GIOVANNA</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="ContainerPersonalized">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    
    <footer class="border-top footer text-muted flexCenterRow">
        <div class="d-flex col-12 m-auto">
            <div class="flexCenterRow col-4">
                <a class="flexCenterRow" href="#">
                    <img src="~/img/icons/instagram.png" width="18" />
                    <h6 class="mx-2 mb-0">instagram</h6>
                </a>
                <a class="flexCenterRow" href="#">
                    <img src="~/img/icons/facebook.png" width="18" />
                    <h6 class="mx-2 mb-0">facebook</h6>
                </a>
            </div>
            <div class="flexCenterRow col-4">
                <img src="~/img/written-logo.png" width="100" />&copy; 2021
            </div>
            <div class="col-4 flexCenterColumn">
                <a class="flexCenterColumn linkWithoutDecoration" href="#">
                    <h6 class="textPink mb-0">Seja um prestador!</h6>
                    <img src="~/img/Casinha.png" width="50" />
                </a>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
