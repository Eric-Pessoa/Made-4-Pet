@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using Made_4_Pet.SessionHelpers
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Made4Pet</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.0/jquery.mask.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/LayoutLogado.css" />
    <link rel="stylesheet" href="~/css/Geral.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body style="background-color: ghostwhite">
    <header>
        <nav class="headerPersonalized navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="d-flex justify-content-between align-items-center col-12">
                <div class="m-0 p-0 col-2">
                    <a class="navbar-brand col-3" asp-controller="Home" asp-action="Index"><img src="~/img/logo.png" width="70" /></a>
                </div>
                <div class="col-6">
                    <form class="w-100 flexCenterRow" asp-action="ProcuraPorServico" asp-controller="estabelecimento">
                        <input name="nomeBusca" id="pesquisa" placeholder="Pesquise aqui por Serviços ou Estabelecimentos" class="form-control col-10" />
                        <button type="submit" class="btn btnSearch">
                            <span class="material-icons text-white h-50">search</span>
                        </button>
                    </form>
                </div>
                <div class="d-flex flex-row justify-content-center col-2">
                    <a class="btn btnPink" asp-action="Login" asp-controller="home"><img src="https://raw.githubusercontent.com/Eric-Pessoa/Made-4-Pet/main/Made-4-Pet/Made-4-Pet/wwwroot/img/icons/gear.png" id="gear" width="40" /></a>
                    <a class="btn btnPink" asp-action="Login" asp-controller="home"><img src="https://raw.githubusercontent.com/Eric-Pessoa/Made-4-Pet/main/Made-4-Pet/Made-4-Pet/wwwroot/img/icons/cart.png" id="cart" width="40" /></a>
                </div>
                <div class="col-2">
                    @{ Cliente user = HttpContextAccessor.HttpContext.Session.GetObjectFromJson<Cliente>("UserSession"); }
                    <a class="btn btnPinkPill" asp-action="Logout" asp-controller="home">@user.Nome</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="ContainerPersonalized pb-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <partial name="_FooterBar" />
    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
