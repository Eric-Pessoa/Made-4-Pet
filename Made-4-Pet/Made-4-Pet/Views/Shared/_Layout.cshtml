<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Made4Pet</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.0/jquery.mask.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/LayoutDeslogado.css" />
    <link rel="stylesheet" href="~/css/Geral.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body style="background-color: ghostwhite">
    <header>
        <nav class="headerPersonalized navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="d-flex justify-content-between w-100 align-items-center">
                <div class="m-0 p-0">
                    <a class="navbar-brand col-4" asp-controller="Home" asp-action="Index"><img src="~/img/logo.png" width="80" /></a>
                </div>
                <div class="d-flex flex-row justify-content-center">
                    <a class="btn btnPink" asp-action="Cadastro" asp-controller="home">Criar conta</a>
                    <a class="btn btnPinkPill" asp-action="Login" asp-controller="home">Entrar</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="ContainerPersonalized pb-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <partial name="_FooterBar" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
