@model Estabelecimento

@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["title"] = "Listagem";
    if (HttpContextAccessor.HttpContext.Session.Get("UserSession") != null) { Layout = "_LayoutLogado"; }
}
@{ var podeAgendar = ViewBag.podeAgendar; }
<link href="~/css/IndexEstab.css" rel="stylesheet" />
<div class="h-100 w-100 flexCenterColumn">
    <h4 class="textPink my-4">Informações @Model.Nome</h4>
    <feedback texto="@TempData["Erro"]" is-error="true"></feedback>
    <feedback texto="@TempData["Sucesso"]"></feedback>
    <feedback texto="@TempData["Info"]" classe="alert alert-info"></feedback>
    <div class="divSchedule flexRowPersonalized col-10 h-50">
        @if (podeAgendar)
        {
            @if (Model.Foto != null)
            {<img src="@Model.Foto" class="col-5 imgEstab" /> }
            else
            { <img src="~/img/no-image-found.png" class="col-5 imgEstab" />}
            <div class="flexCenterColumn col-5">
                <form class="flexCenterRow mb-2" asp-action="index">
                    <input type="date" class="form-control" name="dataBusca" />
                    <button type="submit" class="btn btnPink">buscar</button>
                </form>
                @{
                    string data = ViewBag.data;
                    IList<string> agendamentos = ViewBag.agendamentos;
                }
                @if (data != "")
                {
                    <p class="form-control col-4 text-center">@data.Replace(" 00:00:00", "")</p>
                }
                <div class="col-12 flexCenterRow flex-wrap">
                    @if (agendamentos.Count > 0)
                    {
                        var lista = Model.Agenda.Horarios.Except(agendamentos).ToList();
                        if (lista.Count > 0)
                        {
                            foreach (var h in lista)
                            {
                                <form asp-action="AgendarHorario" asp-controller="Estabelecimento" class="col-4">
                                    <input name="horario" value="@h" type="hidden" />
                                    <input name="data" value="@ViewBag.data" type="hidden" />
                                    <button type="submit" class="col-12 my-2 scheduleParagraph btn">@h</button>
                                </form>
                            }
                        }
                        else
                        { <p class="text-info text-center">Não temos horários disponíveis para a data escolhida!</p> }
                    }

                    else
                    {
                        foreach (var h in Model.Agenda.Horarios)
                        {
                            <form asp-action="AgendarHorario" asp-controller="Estabelecimento" class="col-4">
                                <input name="horario" value="@h" type="hidden" />
                                <input name="data" value="@ViewBag.data" type="hidden" />
                                <button type="submit" class="col-12 my-2 scheduleParagraph btn">@h</button>
                            </form>
                        }
                    }
                    <div class="d-none">
                        @{ var agendado = ViewBag.agendado; }
                        <p id="id-agendado">@agendado</p>
                        <a data-target="#modalInfo" data-toggle="modal" id="botaoModal"></a>
                    </div>

                </div>
            </div>
        }
        else
        {
            @if (Model.Foto != null)
            {<img src="@Model.Foto" class="col-12 imgEstab" /> }
            else
            { <img src="~/img/no-image-found.png" class="col-12 imgEstab" />}
        }
    </div>
    <div class="d-flex justify-content-between h-50 col-12 mt-3" style="margin-left: 40px">
        <div class="col-6 flexCenterColumn">
            <h5 class="textPink">Serviços oferecidos</h5>
            @foreach (var c in Model.Categorias)
            {
                <p class="text">@c</p>
            }
        </div>
        <div class="col-6 flexCenterColumn">
            <h5 class="textPink">Contato @Model.Nome</h5>
            <h6>@Model.Telefone</h6>
        </div>
    </div>
</div>

<script src="~/js/openModal.js"></script>

<div class="modal fade" id="modalInfo" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #23272B; color: white">
                <h5 class="modal-title" id="modalLabel">O que deseja fazer?</h5>
            </div>
            <div class="modal-body d-flex align-content-center justify-content-center" style="background-color: var(--header-bg); color: white">
                <form asp-controller="Home" asp-action="Logout">
                    <a asp-action="editar" asp-controller="estabelecimento" class="btn btn-secondary m-2">Editar informações</a>
                    <button type="submit" class="btn btn-dark m-2">Sair</button>
                </form>
            </div>
            <div class="modal-footer flex-column" style="background-color: var(--header-bg); color: white">
                <p class="text-dark">Digite sua senha caso realmente deseje apagar os dados do estabelecimento <b style="color: var(--main-red)">definitivamente</b>.</p>
                <div class="d-flex align-items-center justify-content-center w-100" style="padding: .5rem">
                    <form asp-action="apagar" asp-controller="estabelecimento" class="w-100 d-flex">
                        <input name="senha" type="password" class="form-control col-6 mx-1" />
                        <button type="submit" class="btn btn-modal text-white">Apagar estabelecimento</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

