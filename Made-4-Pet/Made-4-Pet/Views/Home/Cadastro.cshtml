@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Cadastro de cliente";
    if (HttpContextAccessor.HttpContext.Session.Get("UserSession") != null) { Layout = "_LayoutLogado"; }
}

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Wendy+One&display=swap" rel="stylesheet">

<link href="~/css/form-card.css" rel="stylesheet" />

<div class="right-content" style="display: flex; flex-direction: column; justify-content: center;">
    <Feedback Texto="@TempData["Erro"]" is-error="true"></Feedback>
    <Feedback Texto="@TempData["Sucesso"]"></Feedback>
    <h1 style="display: flex; justify-content: center;" class="my-5">Cadastro de cliente</h1>
    <div class="card cardStyle mx-auto flexCenterColumn" style="width: 70%; box-shadow: 6px 6px 10px #333;">
        <form asp-action="Cadastro" class="p-3 border-bottom">
            <partial name="_FormCreateUpdateCliente" />

            <div class="flexCenterColumn">
                <input type="submit" value="Salvar cadastro" class="btn btnPinkPill mt-4 px-5" />
                <a asp-action="index" asp-controller="home" class="btn btnPink mt-2 px-5">Cancelar</a>
            </div>
        </form>
        <a asp-action="login" class="btnPink my-3">Já tem uma conta? Realize login clicando aqui!</a>
    </div>
</div>
